<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/back" />

<!--    <TextView-->
<!--        android:id="@+id/text_login"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentRight="true"-->
<!--        android:layout_marginTop="25dp"-->
<!--        android:layout_marginRight="25dp"-->
<!--        android:fontFamily="sans-serif-black"-->
<!--        android:text="Login"-->
<!--        android:textSize="18sp" />-->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/projecta_logo_removed" />

    <ImageView
        android:id="@+id/ic_email"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="380dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/u_email"
        android:src="@drawable/email" />

    <EditText
        android:id="@+id/u_email"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:hint="Email"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/ic_lock"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="430dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/u_password"
        android:src="@drawable/lock" />

    <EditText
        android:id="@+id/u_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/u_email"
        android:layout_centerInParent="true"
        android:layout_marginBottom="0dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/u_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded"
        android:onClick="login"
        android:text="Submit" />

    <TextView
        android:id="@+id/go_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Don't have account? Sign Up"
        android:textColor="#2a9df4"
        android:textStyle="bold" />
</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>